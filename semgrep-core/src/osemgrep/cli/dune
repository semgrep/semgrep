; Implementation of the 'semgrep' command-line in OCaml.
; This builds a library. The executable's entry point is defined in ../main
;
(library
  (name osemgrep_cli)
  (wrapped false)
  (libraries
    ; External libraries
    cmdliner
    commons

    ; Internal libraries
    osemgrep_cli_scan
    osemgrep_cli_login
    osemgrep_cli_ci
    ; reusing code from Core_cli
    semgrep_core_cli
  )
)
