(executables
 (names Main)
 (flags (:include flags.sexp) (:standard -open TCB -open Commons_TCB))
 (libraries
    TCB
    semgrep_core_cli
    osemgrep_cli
    lwt_platform.unix
 )
 (preprocess (pps ppx_profiling))
 ; for ocamldebug
 ;XXX(modes native byte)
  (modes byte)
)


; use cli/flags.sh to generate the OS specific build flags
(rule
 (targets flags.sexp)
 (action (run %{workspace_root}/src/main/flags.sh)))


(install
 (package semgrep)
 (section bin)
 ; LATER: at some point we should copy it as osemgrep instead
 (files
  (Main.exe as semgrep-core)
  (Main.bc as semgrep-core.bc)
 )
)
