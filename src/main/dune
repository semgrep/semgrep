(executables
 (names Main)
 (flags
   (:standard (:include flags.sexp))
;   (:standard -open TCB -open Commons_TCB)
   )
 (libraries
    TCB
    semgrep_core_cli
    osemgrep_cli
    lwt_platform.unix
    tracing.unix
 )
 (preprocess (pps ppx_profiling))
  ; for ocamldebug
  (modes native byte)
)


; use cli/flags.sh to generate the OS specific build flags
(rule
 (targets flags.sexp)
 (action
  (with-stdout-to flags.sexp
   (run %{workspace_root}/src/main/flags.sh %{ocaml-config:system}))))

(install
 (package semgrep)
 (section bin)
 ; LATER: at some point we should copy it as osemgrep instead
 (files
  (Main.exe as semgrep-core)
  (Main.bc as semgrep-core.bc)
  (Main.bc as osemgrep.bc)
 )
)
